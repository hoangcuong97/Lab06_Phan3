@model QL_TrungTam_X.Areas.QuanLy.Models.Schedule

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Schedule</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ScheduleID)

        <div class="form-group">
            @Html.LabelFor(model => model.ClassID, "ClassID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClassID", String.Empty)
                @Html.ValidationMessageFor(model => model.ClassID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClassroomID, "ClassroomID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClassroomID", String.Empty)
                @Html.ValidationMessageFor(model => model.ClassroomID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Shifts, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Shifts)
                @Html.ValidationMessageFor(model => model.Shifts)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
